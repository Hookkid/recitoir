{
  "name": "recitoir",
  "version": "1.0.0",
  "description": "A recipe sharing Progressive Web Application",
  "main": "index.js",
  "scripts": {
    "watch:api": "./node_modules/.bin/nodemon -e js --watch ./server/api-server server/api-server/index.js",
    "watch:ui": "./node_modules/.bin/nodemon -e js --watch ./server/asset-server server/asset-server/index.js",
    "watch": "concurrently --names 'API,UI' -c 'bgBlue,bgMagenta' 'npm run watch:api' 'npm run watch:ui'",
    "start:api": "node server/api-server/index.js",
    "start:ui": "node server/asset-server/index.js",
    "start": "concurrently --names 'API,UI' -c 'bgBlue,bgMagenta' 'npm run start:api' 'npm run start:ui'",
    "build:dev": " ./node_modules/.bin/webpack --config webpack.config.js --env dev",
    "build:prod": " ./node_modules/.bin/webpack --config webpack.config.js --env prod",
    "clean": "rm -rf dist/* db/development.sqlite && npm run prepcerts",
    "test": "jest",
    "prepvapid": "web-push generate-vapid-keys --json > ./private/vapid.json",
    "prepcerts": "npm run prepvapid && node ./server/gen-certs.js && rm -rf dist/*.pem && mkdir -p dist && cp private/*.pem dist/",
    "heroku-postbuild": "npm run build:prod"
  },
  "author": "Bruno Portela",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.0.39",
    "@types/react": "^16.0.18",
    "@types/react-dom": "^16.0.2",
    "@types/sequelize": "^4.0.78",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.0",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "compression-webpack-plugin": "^1.0.0",
    "css-loader": "^0.28.4",
    "eslint": "^4.10.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-jest": "^21.2.0",
    "eslint-plugin-react": "^7.4.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^1.1.0",
    "greenkeeper-lockfile": "^1.12.0",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^21.2.1",
    "muicss": "^0.9.28",
    "node-sass": "^4.5.3",
    "nodemon": "^1.12.1",
    "qrcode-reader": "^1.0.4",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-hot-loader": "^3.1.1",
    "react-router-dom": "^4.2.2",
    "react-test-renderer": "^16.0.0",
    "sass-loader": "^6.0.6",
    "style-ext-html-webpack-plugin": "^3.4.3",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-dev-server": "^2.9.3",
    "webpack-hot-middleware": "^2.20.0",
    "webpack-manifest-plugin": "^1.3.2",
    "worker-loader": "^1.0.0"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "chalk": "^2.3.0",
    "concurrently": "^3.5.0",
    "cors": "^2.8.4",
    "debug": "^3.1.0",
    "devcert-with-localhost": "^0.3.2",
    "express": "^4.16.0",
    "idb": "^2.0.3",
    "moment": "^2.19.1",
    "sequelize": "^4.19.0",
    "sqlite3": "^3.1.8",
    "web-push": "^3.0.0"
  }
}
